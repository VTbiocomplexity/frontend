{
  "version": "2",
  "prepare": {
    "fetch": [
      {
        "url": "https://raw.githubusercontent.com/aurelia/tools/master/.eslintrc.json",
        "path": "node_modules/aurelia-tools/.eslintrc.json"
      }
    ]
  },
  "checks": {
    "method-lines": {
      "config": {
        "threshold": 30
      }
    },
    "method-complexity": {
      "config": {
        "threshold": 30
      }
    },
    "exclude_patterns": [
      "spec/",
      "!spec/support/helpers"
    ]
  }
}
